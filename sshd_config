# /etc/ssh/sshd_config
Port $SSH_PORT
Protocol 2

# Logging
SyslogFacility AUTH
LogLevel INFO

# Authentication:
PermitRootLogin no
PubkeyAuthentication yes
AuthorizedKeysFile	.ssh/authorized_keys
PasswordAuthentication no
PermitEmptyPasswords no

# SFTP:
Subsystem sftp internal-sftp

# Security
UsePAM yes
AllowUsers $NEW_USER_LOGIN
ClientAliveInterval 300
ClientAliveCountMax 2

# Performance
MaxAuthTries 3
MaxSessions 10
